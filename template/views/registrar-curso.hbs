{{> header}}
</head>
<body>

    {{> menu user = usuario}}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 id="title">Registro Curso</h1>
            <p class="lead">Formulario para registrar un nuevo curso en el sistema</p>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row d-flex justify-content-center align-items-center contenedor-pagina">
            <div class="col-md-6 col-sm-12 container-form-register">
                
                <form method="POST" action="/curso">
                    <div class="form-group">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre" id="nombre" class="form-control" required>
                    </div>

                    
                    <div class="row"> 
                        <div class="col-sm-12 d-flex flex-row">
                            <div class="form-group" style="width: 50%;">
                                <label for="idCurso">Identificador</label>
                                <input type="text" name="idCurso" id="idCurso" class="form-control" required>
                            </div>
                            <div class="form-group" style="margin-left:10px; width: 50%; ">
                                <label for="valor">Valor</label>
                                <input type="number" name="valor" id="valor" class="form-control" required>
                            </div>
                        </div>
                    </div>

                      <div class="row"> 
                        <div class="col-sm-12 d-flex flex-row">
                            <div class="form-group" style="width: 100%;">
                                <label for="idCurso">Descripcion</label>
                                <input type="text" name="descripcion" id="descripcion" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 d-flex flex-row">
                            <div class="form-group" style="width:100%;">
                                <label for="modalidad">Modalidad</label>
                                <select name="modalidad" id="modalidad" class="form-control">
                                    <option>presencial</option>
                                    <option>virtual</option>
                                </select>
                            </div>

                            <div class="form-group" style="width:100%; margin-left:10px;">
                                <label for="intensidadHoraria">Intensidad Horaria</label>
                                <input type="number" name="intensidadHoraria" id="intensidadHoraria" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group" style="width: 100%;">
                                <label for="cantCupos">Cantidad de cupos</label>
                                <input type="number" name="cantCupos" id="cantCupos" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 ">
                            <input type="submit" value="Enviar" class="btn btn-primary" style="float:right">
                            <a href="/home" class="btn btn-danger">Cancelar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

{{> footer}}