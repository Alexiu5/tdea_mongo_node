{{> header}}
<link rel="stylesheet" href="./css/home.css">
</head>
<body>
    {{> menu user = usuario}}


    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Bienvenido {{usuario.nombre}}</h1>
            <p class="lead">Veo que eres rol {{usuario.rol}} interesante !:D</p>
        </div>
    </div>


    <div class="container" >
        <div class="row" style="margin-bottom:2rem">
            <div class="col-md-12">
                <h2>
                    Cursos
                </h2>
            </div>
        </div>
    </div>
    
    <div class="container">
        {{#ifCond usuario.rol 'aspirante'}}
            <div class="row d-flex flex-row">
                    {{{listarCursosAspirante cursos}}}
            </div>
        {{/ifCond}}


        {{#ifCond usuario.rol 'coordinador'}}
            <div class="row">
                 <div class="col-md-12" style="margin-bottom: 2rem ">
                    <a href="/curso/register" class="btn btn-success">Agregar curso</a>
                </div>

                <div class="col-md-12">
                    {{{listarCursosCoordinador cursos}}}
                </div>
            </div>
        {{/ifCond}}

        {{#ifCond usuario.rol 'interesado'}}
            <div class="row">
                <div class="col-md-12">
                    {{{listarCursosInteresado cursos}}}

                </div>
            </div>
        {{/ifCond}}
    </div>
{{> footer}}